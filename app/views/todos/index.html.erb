<h1 align="center">My To-do List</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">My To-Do List</div>
      <table class="table">
        <thead> 
          <tr> 
            <th>To-Do</th> <th>Actions</th>
          </tr> 
        </thead>
        <tbody>
          <% @todos.each do |todo| %>
          <tr>
            <% if todo.completed? %>
              <td scope="row"> <i class="fa fa-check-square-o"></i> </td>
            <% else %>
              <td scope="row"><%= link_to complete_todo_path(todo), method: :patch do %><i class="fa fa-square-o" ></i>
                <% end %> </td>
            <% end %>
            <td scope="row"><div class="todo-item"><%= link_to todo.name, edit_todo_path(todo), remote: true %></div></td>
            <td scope="row">  <i class="fa fa-pencil-square-o"></i> </td>
            <td scope="row"><%= link_to todo, method: :delete, data: { confirm: 'Are you sure?' } do %> <i class="fa fa-trash-o"></i>
       <% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <%= form_for(@todo) do |f| %>
      <%= f.text_field :name, placeholder:"Add a New Todo", class: "form-control" %>
      <div style="margin-top: 1em;">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "edit", root_path, remote: true, id: "todos-link" %>